import { props } from 'bluebird'
import React from 'react'

const Header = (props) => {
  return (
    <h1>
    {props.course.name}
    </h1>
  )
}

const Content = (props) => {
  return (
    <p>
    {props.part.parts[0].name} {props.part.parts[0].exercises} <br />
       {props.part.parts[1].name} {props.part.parts[1].exercises} <br />
          {props.part.parts[2].name} {props.part.parts[2].exercises}
          </p>
  )
}

const Total = (props) => {
  let tot = 0;
  for (let i=0; i < props.total.parts.length; i++){
    tot = tot + props.total.parts[i].exercises;
  }
  return (
    <p>
    Number of exercises {tot}
    </p>
  )
}

const App = () => {
  const course = {
    name: 'Half Stack application development',
    parts: [
      {
        name: 'Fundamentals of React',
        exercises: 10
      },
      {
        name: 'Using props to pass data',
        exercises: 7
      },
      {
        name: 'State of a component',
        exercises: 14
      }
    ]
  }


  return (
    <div> 
      <Header course = {course}/>
      <Content part = {course}/>
      <Total total = {course}/>
    </div>
  )
}

export default App;
