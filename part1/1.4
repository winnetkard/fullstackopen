import { props } from 'bluebird'
import React from 'react'

const Header = (props) => {
  return (
    <h1>
    {props.course}
    </h1>
  )
}

const Content = (props) => {
  return (
    <p>
    {props.part[0].name} {props.part[0].exercises} <br />
       {props.part[1].name} {props.part[1].exercises} <br />
          {props.part[2].name} {props.part[2].exercises}
          </p>
  )
}

const Total = (props) => {
  let tot = 0;
  for (let i=0; i < props.total.length; i++){
    tot = tot + props.total[i].exercises;
  }
  return (
    <p>
    Number of exercises {tot}
    </p>
  )
}

const App = () => {
  const course = 'Half Stack application development'
  const parts = [
    {
      name: 'Fundamentals of React',
      exercises: 10
    },
    {
      name: 'Using props to pass data',
      exercises: 7
    },
    {
      name: 'State of a component',
      exercises: 14
    }
  ]

  return (
    <div> 
      <Header course = {course}/>
      <Content part = {parts}/>
      <Total total = {parts}/>
    </div>
  )
}

export default App;
